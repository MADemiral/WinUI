<Window
    x:Class="NavGuiLib.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:NavGuiLib.Views"
    Title="NavGuiLib">


    <NavigationView
        x:Name="NavView"
        PaneDisplayMode="Left"
        IsBackButtonVisible="Collapsed"
        IsSettingsVisible="False"
        OpenPaneLength="240"
        CompactPaneLength="56"
        SelectionChanged="NavView_SelectionChanged"
        Header="NavGuiLib"
        AlwaysShowHeader="False">

        <!-- HEADER -->
        <NavigationView.HeaderTemplate>
            <DataTemplate>
                <TextBlock
                    Text="NavGuiLib"
                    FontSize="22"
                    FontWeight="SemiBold"
                    Margin="12,8"/>
            </DataTemplate>
        </NavigationView.HeaderTemplate>

        <!-- MENU ITEMS -->
        <NavigationView.MenuItems>

            <NavigationViewItem
                Content="Home"
                Tag="Home"
                ToolTipService.ToolTip="Ana Sayfa">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Home"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <NavigationViewItem
                Content="Enum To Brush"
                Tag="EnumToBrush"
                ToolTipService.ToolTip="Enum → Brush Dönüşümü">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE790;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem
                Content="Tab 2"
                Tag="Tab2"
                ToolTipService.ToolTip="İkinci Sekme">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="Document"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

        </NavigationView.MenuItems>

        <!-- CONTENT AREA -->
        <Frame
            x:Name="ContentFrame"
            Margin="16"
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>

    </NavigationView>
</Window>
